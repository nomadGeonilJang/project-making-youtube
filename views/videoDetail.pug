extends layout/main
include mixins/videoBlock


block content
  .video__player
    video(src=`/${video.fileUrl}`, controls=true)
  .video__info
    a(href=routes.editVideo(video.id)) 수정하기
    h5.video__title= video.title
    span.video_views= video.views
    p.video__description= video.description
  .video__comments
    if video.comments.length === 1
     span.video__comment-number 댓글 1
    else
     span.video__comment-number 댓글 #{video.comments.length}
