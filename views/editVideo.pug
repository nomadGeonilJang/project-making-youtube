extends layout/main

block content
  .form-container
      form(action=`${routes.editVideo(video && video.id)}`, method="post")
          input(type="text", placeholder="Title", name="title", value= video && video.title)
          textarea(name="description", placeholder="Description")=  video && video.description
          input(type="submit", value="Update Video")
      a.form-container__link.form-container__link--delete(href=`${routes.deleteVideo(video.id)}`) Delete Video
